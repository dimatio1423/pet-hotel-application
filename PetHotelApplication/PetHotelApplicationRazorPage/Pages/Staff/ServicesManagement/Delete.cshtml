@page
@model PetHotelApplicationRazorPage.Pages.Staff.ServicesManagement.DeleteModel

@{
    Layout = "_LayoutManage";
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">Delete Service</h4>
            </div>
            <div class="card-body">
                <h3 class="text-danger">Are you sure you want to delete this?</h3>
                <div class="border p-3 mb-3">
                    <h5>Service Details</h5>
                    <dl class="row">
                        <dt class="col-sm-2 font-weight-bold">
                            @Html.DisplayNameFor(model => model.PetCareService.Type)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PetCareService.Type)
                        </dd>
                        <dt class="col-sm-2 font-weight-bold">
                            @Html.DisplayNameFor(model => model.PetCareService.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PetCareService.Description)
                        </dd>
                        <dt class="col-sm-2 font-weight-bold">
                            @Html.DisplayNameFor(model => model.PetCareService.Status)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PetCareService.Status)
                        </dd>
                        <dt class="col-sm-2 font-weight-bold">
                            @Html.DisplayNameFor(model => model.PetCareService.Price)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PetCareService.Price)
                        </dd>

                        @if (Model.ServiceImages != null)
                        {
                            if (Model.ServiceImages.Count() > 0)
                            {
                                <dt class="col-sm-2 font-weight-bold">
                                    Current Images
                                </dt>
                                <dd class="col-sm-10">
                                    <button type="button" class="btn btn-info mb-2" onclick="toggleImageList()">Show/Hide Current Images</button>
                                    <div id="currentImages" class="d-none">
                                        <div class="d-flex flex-wrap">
                                            @foreach (var image in Model.PetCareService.ServiceImages)
                                            {
                                                <div class="img-thumbnail m-2" style="width: 100px; height: 100px; overflow: hidden;">
                                                    <img class="img-fluid"
                                                         src="@image.Image"
                                                         alt="Service Image"
                                                         style="object-fit: cover; object-position: center; height: 100%; width: 100%;">
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </dd>
                            }
                        }

                    </dl>
                </div>

                <form method="post">
                    <input type="hidden" asp-for="PetCareService.Id" />
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-page="./Index" class="btn btn-secondary ml-2">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleImageList() {
            var imageList = document.getElementById('currentImages');
            if (imageList.classList.contains('d-none')) {
                imageList.classList.remove('d-none');
            } else {
                imageList.classList.add('d-none');
            }
        }
    </script>
}
