@page
@model PetHotelApplicationRazorPage.Pages.Staff.PaymentRecordManagement.DetailsModel

@using BusinessObjects.Enums.PaymenStatusEnums;

@{
    ViewData["Title"] = "Details";
}

<div class="container-xl px-4 mt-4">
    <h1>Details</h1>

    <div>
        <h4>PaymentRecord</h4>
        <hr />
        <form method="post">
            <dl class="row">
                <input type="hidden" asp-for="@Model.PaymentRecord.Id" />

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PaymentRecord.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PaymentRecord.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PaymentRecord.Date)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PaymentRecord.Date)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PaymentRecord.Method)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PaymentRecord.Method)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PaymentRecord.Status)
                </dt>
                @if (Model.PaymentRecord.Status.Equals(PaymentStatusEnums.Cancelled.ToString()) || 
                Model.PaymentRecord.Status.Equals(PaymentStatusEnums.Error.ToString()))
                {
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PaymentRecord.Booking.Status)
                    </dd>
                }else
                {
                    <dd class="col-sm-10">
                        <select asp-for="PaymentRecord.Status" asp-items="@Model.PaymentStatus" class="form-control">
                        </select>
                    </dd>
                }
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PaymentRecord.Booking)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PaymentRecord.Booking.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PaymentRecord.User)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PaymentRecord.User.Email)
                </dd>

               <div>
                    @if (!Model.PaymentRecord.Status.Equals(PaymentStatusEnums.Cancelled.ToString()) 
                    && !Model.PaymentRecord.Status.Equals(PaymentStatusEnums.Error.ToString()))
                    {
                        <button type="submit" class="btn btn-primary">Save Status</button>
                    }
                    <a asp-page="./Index">Back to List</a>
               </div>

            </dl>
        </form>
    </div>
</div>

