@page
@model PetHotelApplicationRazorPage.Pages.BookingModel
@{
}

<style>
    .image-container {
        position: relative;
        width: 100%;
        height: 100%;
    }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
</style>

<div class="container mt-5">
    <div class="row d-flex align-items-stretch">
        <!-- Image Column -->
        <div class="col-md-6 d-flex align-items-stretch" >
            <div class="image-container">
                <img src="~/img/about.jpg" alt="Pet Image" class="img-fluid w-100" />
            </div>
        </div>
        <!-- Form Column -->
        <div class="col-md-6 d-flex align-items-stretch">
            <form method="post" class="w-100">
                <h2>ĐIỀN FORM ĐẶT LỊCH LÀM ĐẸP CHO BÉ</h2>
                <div class="form-group">
                    <label for="ParentName">Tên bố/mẹ:</label>
                    <input type="text" class="form-control"  />
                </div>
                <div class="form-group">
                    <label for="ParentPhoneNumber">Số điện thoại bố/mẹ:</label>
                    <input type="tel" class="form-control"  />
                </div>
                <div class="form-group">
                    <label for="Email">Email:</label>
                    <input type="email" class="form-control"  />
                </div>
                <div class="form-group">
                    <label for="PetName">Tên bé:</label>
                    <input type="text" class="form-control"  />
                </div>
                <div class="form-group">
                    <label for="BreedAge">Giống/Tuổi:</label>
                    <input type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Dịch vụ:</label>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input"  value="Spa 9 bước thơm tho" />
                        <label class="form-check-label">Spa 9 bước thơm tho</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input"  value="Grooming tạo kiểu" />
                        <label class="form-check-label">Grooming tạo kiểu</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input"  value="Hồ bơi thú cưng - sân chơi" />
                        <label class="form-check-label">Hồ bơi thú cưng - sân chơi</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input"  value="Trông giữ qua đêm (Hotel)" />
                        <label class="form-check-label">Trông giữ qua đêm (Hotel)</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input"  value="Trông giữ trong ngày (Daycare)" />
                        <label class="form-check-label">Trông giữ trong ngày (Daycare)</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Date">Ngày:</label>
                    <input type="date" class="form-control"  />
                </div>
                <div class="form-group">
                    <label for="Notes">Ghi chú cho VuiPet:</label>
                    <textarea class="form-control" ></textarea>
                </div>
                <button type="submit" class="btn btn-primary">ĐẶT LỊCH NGAY</button>
            </form>
        </div>
    </div>
</div>