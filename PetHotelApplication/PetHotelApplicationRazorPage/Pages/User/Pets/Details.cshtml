@page
@model PetHotelApplicationRazorPage.Pages.User.Pets.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container-xl px-4 mt-4">
    <!-- Account page navigation-->
    <nav class="nav nav-borders">
        <a class="nav-link active ms-0" asp-page="./Index">Go back</a>
        <a class="nav-link active ms-0" href="" target="__blank">Booking History</a>
    </nav>
    <hr class="mt-0 mb-4">
    <form class="row" method="post" enctype="multipart/form-data">
        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Profile Picture</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <div class="rounded-circle mb-2" style="width: 300px; height: 300px; overflow: hidden;">
                        <img class="img-fluid"
                             src="@Model.Pet.Avatar"
                             alt="Pet Avatar"
                             id="ImageView"
                             style="object-fit: cover; object-position: center; height: 100%; width: 100%;">
                    </div>
                    <!-- Profile picture help block-->
                    <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                    <!-- Profile picture upload button-->

                    <input asp-for="Image" type="file" id="ImgUpload" onchange="ImgPreview(this)" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Pet Details</div>
                <div class="card-body">
                    <input type="hidden" asp-for="Pet.Id" />
                    <input type="hidden" asp-for="Pet.Avatar" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- Form Group (username)-->
                    <div class="mb-3">
                        <label asp-for="Pet.PetName" class="small mb-1">Pet name</label>
                        <input asp-for="Pet.PetName" class="form-control" placeholder="Enter your pet name">
                        <span asp-validation-for="Pet.PetName" class="text-danger"></span>
                    </div>
                    <!-- Form Row-->
                    <div class="row gx-3 mb-3">
                        <!-- Form Group (first name)-->
                        <div class="col-md-6">
                            <label asp-for="Pet.Species" class="small mb-1">Species</label>
                            <input asp-for="Pet.Species" class="form-control" placeholder="Enter your pet species (Dog, Cat,...)">
                            <span asp-validation-for="Pet.Species" class="text-danger"></span>
                        </div>
                        <!-- Form Group (last name)-->
                        <div class="col-md-6">
                            <label asp-for="Pet.Breed" class="small mb-1">Breed</label>
                            <input asp-for="Pet.Breed" class="form-control" placeholder="Enter your pet breed (Shiba,...)">
                            <span asp-validation-for="Pet.Breed" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Form Row        -->
                    <div class="row gx-3 mb-3">
                        <!-- Form Group (organization name)-->
                        <div class="col-md-6">
                            <label asp-for="Pet.Age" class="small mb-1">Age</label>
                            <input asp-for="Pet.Age" class="form-control" placeholder="Enter your pet age">
                            <span asp-validation-for="Pet.Age" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Save changes button-->
                    <button class="btn btn-warning" type="submit"><a asp-page="./Index" class="text-white">Cancel</a></button>
                    <button class="btn btn-primary" type="submit">Save changes</button>
                </div>
            </div>
        </div>

    </form>
</div>


<script>
    function ImgPreview(input) {
        if (input.files[0]) {
            var uploadimg = new FileReader();
            uploadimg.onload = function (displayimg) {
                $("#ImageView").attr('src', displayimg.target.result);
            }
            uploadimg.readAsDataURL(input.files[0]);
        }
    }
</script>