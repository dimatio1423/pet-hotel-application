@page
@model PetHotelApplicationRazorPage.Pages.User.Booking.EditModel
@{
    ViewData["Title"] = "Edit Booking";
    var booking = Model.BookingDetails;
}

<div class="container-fluid mt-5">
    <div class="container">
        <h2 class="text-center mb-4">Edit Booking Information</h2>
        <form method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="boardingType">Boarding Type:</label>
                        <input type="text" id="boardingType" class="form-control" asp-for="BookingDetails.BoardingType" readonly />
                    </div>
                    <div class="form-group">
                        <label for="startDate">Start Date:</label>
                        <input type="date" id="startDate" class="form-control" asp-for="BookingDetails.StartDate" />
                    </div>
                    <div class="form-group">
                        <label for="endDate">End Date:</label>
                        <input type="date" id="endDate" class="form-control" asp-for="BookingDetails.EndDate" />
                    </div>
                    <div class="form-group">
                        <label for="note">Note:</label>
                        <textarea id="note" class="form-control" asp-for="BookingDetails.Note"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="accommodation">Accommodation Type:</label>
                        <select id="accommodation" class="form-control" asp-for="BookingDetails.Accommodation.Type">
                            @foreach (var accommodation in Model.AvailableAccommodations)
                            {
                                <option value="@accommodation.Type" selected="@(accommodation.Type == booking.Accommodation.Type ? "selected" : "")">
                                    @accommodation.Type
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="petName">Pet Name:</label>
                        <input type="text" id="petName" class="form-control" asp-for="BookingDetails.Pet.PetName" readonly />
                    </div>
                    <div class="form-group">
                        <label>Selected Services:</label>
                        <div class="form-check">
                            @foreach (var service in Model.AvailableServices)
                            {
                                var isChecked = Model.BookingDetails.PetCareServices.Any(s => s.Type == service.Type);
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="@service.Type" name="BookingDetails.PetCareServices" @(isChecked ? "checked" : "") />
                                    <label class="form-check-label">
                                        @service.Type - @service.Price.ToString("#,##0") VNĐ
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@booking.Id">Cancel</a>
        </form>
    </div>
</div>
