@page
@model PetHotelApplicationRazorPage.Pages.User.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div>
    <h1 class="text-center my-4">Sign up for using more features</h1>
    <hr />

    <div class="d-flex justify-content-center">
        <div class="col-md-6 col-lg-4">

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="register.FullName" class="control-label"></label>
                    <input asp-for="register.FullName" class="form-control" />
                    <span asp-validation-for="register.FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="register.PhoneNumber" class="control-label"></label>
                    <input asp-for="register.PhoneNumber" class="form-control" />
                    <span asp-validation-for="register.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="register.Address" class="control-label"></label>
                    <input asp-for="register.Address" class="form-control" />
                    <span asp-validation-for="register.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="register.Email" class="control-label"></label>
                    <input asp-for="register.Email" class="form-control" />
                    <span asp-validation-for="register.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="register.Password" class="control-label"></label>
                    <input asp-for="register.Password" class="form-control" type="password" />
                    <span asp-validation-for="register.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="register.ConfirmPassword" class="control-label"></label>
                    <input asp-for="register.ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="register.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Sign up</button>
                </div>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        <span>@TempData["Error"] </span>
                    </div>
                }
            </form>
        </div>
    </div>

    <div class="d-flex justify-content-center mt-3">
        <a asp-page="/Index">Back To Homepage</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
