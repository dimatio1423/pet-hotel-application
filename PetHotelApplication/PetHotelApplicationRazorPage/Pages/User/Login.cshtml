@page
@model PetHotelApplicationRazorPage.Pages.User.LoginModel
@{
    ViewData["Title"] = "Login";
}



<div class="container-fluid">
    <div class="text-center my-4">
        <h1>Sign in</h1>
        <hr/>
    </div>

    <div class="d-flex justify-content-center">
        <div class="col-md-6 col-lg-4">
          
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="loginModel.Email" class="control-label"></label>
                    <input asp-for="loginModel.Email" class="form-control" />
                    <span asp-validation-for="loginModel.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="loginModel.Password" class="control-label"></label>
                    <input type="password" asp-for="loginModel.Password" class="form-control" />
                    <span asp-validation-for="loginModel.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Sign in" class="btn btn-primary" />
                </div>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        <span>@TempData["Error"] </span>
                    </div>
                }


            </form>
        </div>
    </div>

    <div class="d-flex justify-content-center mt-3">
        <a asp-page="/User/Register">Do not have account yet ? Sign up now !</a>
    </div>

    <div class="d-flex justify-content-center mt-3">
        <a asp-page="/Index">Back To Homepage</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
