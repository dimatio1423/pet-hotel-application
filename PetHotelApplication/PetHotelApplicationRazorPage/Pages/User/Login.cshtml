@page
@model PetHotelApplicationRazorPage.Pages.User.LoginModel
@{
    ViewData["Title"] = "Login";
}


<div class="text-center">
    <h1>Đăng nhập</h1>
    <hr />
</div>

<div class="d-flex justify-content-center">
    <div class="col-md-6 col-lg-4">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <span>@TempData["Error"] </span>
            </div>
        }

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="loginModel.Email" class="control-label"></label>
                <input asp-for="loginModel.Email" class="form-control" />
                <span asp-validation-for="loginModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="loginModel.Password" class="control-label"></label>
                <input type="password" asp-for="loginModel.Password" class="form-control" />
                <span asp-validation-for="loginModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Đăng nhập" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-center mt-3">
    <a asp-page="/Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
