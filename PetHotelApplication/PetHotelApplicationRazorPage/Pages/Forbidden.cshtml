@page
@model PetHotelApplicationRazorPage.Pages.ForbiddenModel
@{
    Layout = null; // No layout
    ViewData["Title"] = "Forbidden";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forbidden</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f8f9fa;
        }

        .forbidden-container {
            text-align: center;
        }

        .forbidden-title {
            font-size: 72px;
            font-weight: bold;
            color: #dc3545;
        }

        .forbidden-message {
            font-size: 24px;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="forbidden-container">
        <div class="forbidden-title">403</div>
        <div class="forbidden-message">You don't have permission to access this page.</div>
        <a asp-page="/Index" class="btn btn-primary mt-4">Go to Home</a>
    </div>
</body>
</html>
