@page
@model PetHotelApplicationRazorPage.Pages.Manager.AccommodationManage.DetailsModel

@{
    Layout = "_LayoutManage";
    ViewData["Title"] = "Details";
}

<div class="container-fluid">
    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header">
                <h4 class="mb-0">Accommodation Details</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Accommodation.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Accommodation.Name)
                    </dd>
                    <dt class="col-sm-2 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Accommodation.Type)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Accommodation.Type)
                    </dd>
                    <dt class="col-sm-2 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Accommodation.Capacity)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Accommodation.Capacity)
                    </dd>
                    <dt class="col-sm-2 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Accommodation.Status)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Accommodation.Status)
                    </dd>
                    <dt class="col-sm-2 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Accommodation.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Accommodation.Description)
                    </dd>
                    <dt class="col-sm-2 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Accommodation.Price)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Accommodation.Price)
                    </dd>
                </dl>
                <div class="text-right">
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Accommodation.Id">Edit</a>
                    <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
