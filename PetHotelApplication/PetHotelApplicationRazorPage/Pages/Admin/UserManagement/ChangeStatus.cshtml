@page "{id}/{status}"
@model PetHotelApplicationRazorPage.Pages.Admin.UserManagement.ChangeStatusModel

@{
    Layout = "_LayoutManage";
    ViewData["Title"] = "Change User Status";
}

<style>
    .container {
        max-width: 1200px;
    }

    h1 {
        font-family: 'Arial', sans-serif;
        color: #333;
    }

    .card {
        border: 1px solid #ced4da;
        border-radius: 10px;
        padding: 20px;
    }

    .card-body {
        padding: 20px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 5px 15px;
        font-size: 1em;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        padding: 5px 10px;
        font-size: 0.9em;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        padding: 5px 10px;
        font-size: 0.9em;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .text-center {
        text-align: center;
    }

    .form-group label {
        font-weight: bold;
    }

    .text-danger {
        font-size: 0.9em;
        font-weight: bold;
    }

    .container-fluid {
        padding: 0 15px;
    }

    .container {
        max-width: 1200px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
    }

    .col-md-6 {
        flex: 0 0 50%;
        max-width: 50%;
        box-sizing: border-box;
        padding: 15px;
    }

    .form-group {
        margin-bottom: 15px;
    }
</style>

<div class="container-fluid">
    <div class="container mt-5">
        <h1 class="text-center">CHANGE USER STATUS</h1>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <p>Are you sure you want to @Model.Status the account of <strong>@Model.User.FullName</strong>?</p>
                        <form method="post">
                            <input type="hidden" asp-for="UserId" />
                            <input type="hidden" asp-for="Status" />
                            <button type="submit" class="btn btn-danger">Yes</button>
                            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
